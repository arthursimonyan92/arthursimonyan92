package com.company;

public class Main {
    public static void main(String[] args) {
	// write your code here
        System.out.println(p("aahhav"));
    }


    private static boolean p(String s) {
        if(s.length()<=1) 
            return true;
        if(s.charAt(0)!=s.charAt(s.length()-1)){
            return false;
        }
         return p(s.substring(1,s.length()-1));
    }}
